@{
    ViewData["Title"] = "Editar Marca";
}

@model Marca
<link rel="stylesheet" href="~/lib/bootstrap-select/css/bootstrap-select.css" />
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
<script src="~/lib/bootstrap-select/js/bootstrap-select.js"></script>


<div class="text-center">
    <h1 class="display-4"><strong>EDITAR MARCA</strong></h1>
    <h1 class="display-4">@Model.Nombre</h1>
</div>

<form class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2" for="nombre">Nombre:</label>
        <div class="col-sm-10">
            <input id="nombre" type="text" class="form-control" value="@Model.Nombre">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default"><strong>Guardar Cambios</strong></button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a type="button" class="btn btn-default" href="@Url.Action("ConsultarMarcas","Consultar")"><strong>Cancelar</strong></a>
        </div>
    </div>
</form>

<script>
        $(document).ready(function () {

            $("form").submit(function () {
                event.preventDefault();

                var nombre = $("#nombre");

                if (nombre.val().trim() == "") {
                    nombre.removeClass("is-valid");
                    nombre.addClass("is-invalid");
                } else {
                    nombre.removeClass("is-invalid");
                    nombre.addClass("is-valid")
                }


                if ($(".is-valid").length == 1) {
                    EditarMarca();
                }


            });

            function EditarMarca() {
                var nombre = $("#nombre").val();

                $.ajax({
                    url: "@Url.Content("~/Consultar/EditarMarca")",
                    type: "POST",
                    data: {
                        marcaid: @Model.MarcaID,
                        nombre: nombre,
                    },
                    success: function (response) {
                        if (response == false) {
                            alert("Ha ocurrido un error en el proceso de actualización.")
                        } else {
                            alert("Se ha realizado la actualización correctamente.")
                            window.location = "@Url.Content("~/Consultar/ConsultarMarcas")";
                        }
                    },
                    error: function (response) {
                    },

                });
            }

        });
</script>